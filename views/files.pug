doctype html
html
	head
		link(rel="stylesheet" type="text/css" href="/jquery-linedtextarea.css")
	body
		h4 #{file}
		if fileuser
			a(href='/star/'+fileuser+'/'+file) Star
			br
			a(href='/download/'+fileuser+'/'+file) Download
		else
			a(href='/delete/'+file) remove
			br
			a(href='/edit/'+file) edit
			br
			a(href='/download/'+file) Download
		
		textarea(name='editarea' class='lined' style="height:80%" cols='100' readonly)=contents

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript")

		script(src="/jquery-linedtextarea.js" type="text/javascript")
		
		script(src="/autosize.js" type="text/javascript")
		
		script autosize(document.querySelectorAll('textarea'));
		
		script $(".lined").linedtextarea();
		